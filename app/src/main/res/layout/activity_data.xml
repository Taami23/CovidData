<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actividades.DataNacion"
    android:orientation="vertical"
    android:background="#102530">


        <TextView
            android:paddingTop="10dp"
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="45dp"
            android:fontFamily="@font/font"
            ></TextView>
    <TextView
        android:id="@+id/soyTitleyFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30dp"
        android:fontFamily="@font/yanoneka"
        ></TextView>
        <TextView
            android:id="@+id/titulo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:textSize="30dp"
            android:fontFamily="@font/yanoneka"
            ></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
               >
                <TextView
                    android:id="@+id/titulo3"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:fontFamily="@font/yanoneka"
                    android:background="#0B1921"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/titulo4"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="#0B1921"
                    android:fontFamily="@font/yanoneka"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp"></TextView>
            </LinearLayout>

        </LinearLayout>

    <TextView
        android:id="@+id/titulo5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="30dp"
        android:fontFamily="@font/yanoneka"
        ></TextView>

    <com.anychart.AnyChartView
        android:id="@+id/any_chart_view"
        android:background="#102530"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        >
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress_bar"
            android:layout_gravity="center">

        </ProgressBar>
    </com.anychart.AnyChartView>

</LinearLayout>